.col-md-4.col-md-offset-4
  .login-panel.panel.panel-default
    .panel-heading
      %h3.panel-title Sign In
    .panel-body
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        %fieldset
          .form-group
            = f.email_field :email, placeholder: 'E-mail', class: 'form-control', autofocus: true
          .form-group
            = f.password_field :password, class: 'form-control'
          .checkbox
            = f.label :remember_me do
              = f.check_box :remember_me
              Remember Me
          = f.submit 'Sign in', class: 'btn btn-sm btn-success', style: 'width: 100%;'